@import '~antd/lib/style/themes/default.less';

.tableList {
  .tableListOperator {
    margin-bottom: 24px;
    
    button {
      margin-right: 8px;
    }
  }
  .tableListSearch {
    :global {
      .ant-form-item {
        margin-bottom: 24px;
        margin-right: 0;
       
        display: flex;
        > .ant-form-item-label {
          width: auto;
          line-height: 32px;
          padding-right: 8px;
        }
        .ant-form-item-control {
          line-height: 32px;
        }
      }
      .ant-form-item-control-wrapper {
        flex: 1;
      }
    }
    .submitButtons {
      display: block;
      white-space: nowrap;
      margin-bottom: 24px;
      text-align: right;
    }
  }
  :global {
    .ant-table-thead > tr > th.ant-table-selection-column,
    .ant-table-tbody > tr > td.ant-table-selection-column {
      text-align: left;
    }
  }
}

@media screen and (max-width: @screen-xs) {
  .tableListSearch :global(.ant-form-item-label) {
    width: 20% !important;
  }
}

.divider {
  :global {
    .ant-divider-horizontal.ant-divider-with-text-left:before {
      top: 0 !important;
      width: 0 !important;
    }
    .ant-divider-inner-text {
      color: #1890FF;
      font-weight: bold;
      padding-left: 0 !important;
    }
  }
}

// 考勤
.events {
  list-style: none;
  width: 100%;
  height: 100%;
  // background: red;
  margin: 0;
